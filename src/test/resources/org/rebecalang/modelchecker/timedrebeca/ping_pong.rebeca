reactiveclass PingActor(3) {
    knownrebecs {
        PongActor po;
    }
    statevars {
    }

    PingActor() {
        self.ping();
    }
    msgsrv ping() {
        int var=0;
        po.m2();
        po.m3();
        delay(?(10, 20));
        var = var+1;
    }
}

